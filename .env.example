# Slack-Based AI PM System - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Slack Integration
# =============================================================================

# Slack incoming webhook URL for sending messages
# Create at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T.../B.../...

# Default channel for PM updates (can be overridden per workflow)
SLACK_CHANNEL=#pm-updates

# Who to mention when tasks are blocked (use @channel, @here, or specific user)
SLACK_MENTION_ON_BLOCK=@channel

# =============================================================================
# OPTIONAL: AI Model API Keys (for oh-my-opencode)
# =============================================================================

# Claude API (Anthropic) - Required for Sisyphus orchestrator
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API - Required for Oracle agent
OPENAI_API_KEY=sk-...

# Google AI (Gemini) - Required for Frontend agent
GOOGLE_AI_API_KEY=...

# =============================================================================
# OPTIONAL: Remote Storage (S3/R2)
# =============================================================================

# Cloudflare R2 configuration for persistent storage across GitHub Actions runs
R2_ACCOUNT_ID=
R2_ACCESS_KEY=
R2_SECRET_KEY=
R2_BUCKET=slack-ai-pm

# Alternative: AWS S3 (if not using R2)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=slack-ai-pm

# =============================================================================
# OPTIONAL: System Configuration
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# MCP server port (default: 3333)
MCP_PORT=3333

# SQLite database path (relative to data/pm/)
PM_DATABASE=tasks.db

# Timezone for scheduled tasks
TZ=America/Los_Angeles

# =============================================================================
# OPTIONAL: oh-my-opencode Configuration
# =============================================================================

# Path to oh-my-opencode config (default: ~/.config/opencode/config.yaml)
OPENCODE_CONFIG_PATH=

# Enable all oh-my-opencode features (ultrawork mode)
OPENCODE_ULTRAWORK=true

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable SQLite web viewer on port 8080
# Use: docker compose --profile dev up
ENABLE_DB_VIEWER=false
